{
  "files": [],
  "include": ["src", "*.ts"], // added for arcgis
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    "esModuleInterop": true, // added for arcgis
    "lib": ["DOM", "DOM.Iterable", "ES2023"], // added for arcgis
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx", // added for jsx interface functionality
    "module": "ES2022", // added for arcgis
    "moduleResolution": "Bundler", // added for arcgis
    "resolveJsonModule": true, // added for arcgis
    "target": "ES2023", // added for arcgis
     "skipLibCheck": true, // added for arcgis
  },
}